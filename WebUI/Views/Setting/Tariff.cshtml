<!-- /Yeni Tarife modal -->

<script>
    $(document).ready(function () {
        //tarife category doldurmak için
        var firstValue = $("#tariffname").val();
        fillCategoryDropdown(firstValue, $("#tariffnamecategory"));

        $("#btn-tdb-tarife-getir").click(function () {
            var categoryId = $("#tariffnamecategory").val();
            $.ajax({
                async: false,
                url: "/Setting/GetTdbListModalWidget",
                type: "GET",
                //data: { categoryId: categoryId },
                success: function (data) {
                    $("#modal_tdblisttable-widget").html('');
                    $("#modal_tdblisttable-widget").html(data);
                }
            });
            $("#modal_tdblist").modal('show');
        });

        $("#tdbmodalclick").click(function () {
            const tdb_list = document.querySelector('#TDB-Name');
            const selected_tdb_list = tdb_list.querySelectorAll('.selected');
            if (selected_tdb_list.length == 0) {
                alert("Fiyat Listesi Seçiniz.");
                return;
            }
            //console.log(selected_tdb_list[0].dataset.id);
            //console.log($("#tariffname").val());
            var tariffNameId = $("#tariffname").val();
            var tdbId = selected_tdb_list[0].dataset.id;
            $.ajax({
                async: false,
                url: "/Setting/TariffListToTDBList",
                type: "POST",
                data: { tariffNameId: tariffNameId, tdbId: tdbId },
                success: function (data) {
                    alert(data);
                }
            });
            $("#modal_tdblist").modal('hide');
            location.reload();
        });

        $("#btn-new").click(function () {
            $("#modal_yenitarife").modal('show');
        });
        $("#btn-delete").click(function () {
            var dropdown = document.getElementById("tariffname");
            var selectedOption = dropdown.options[dropdown.selectedIndex].text;            
            var cevap = confirm(selectedOption + " tarifesinin silinmesine emin misiniz?");
            if (cevap) {
                var tariffNameId = $("#tariffname").val();
                $.ajax({
                    async: false,
                    url: "/Setting/DelTariffName",
                    type: "POST",
                    data: { id: tariffNameId },
                    success: function (data) {
                        alert(data);

                        var dropdown = document.getElementById("tariffname");
                        var selectedValue = tariffNameId;

                        for (var i = 0; i < dropdown.options.length; i++) {
                            if (dropdown.options[i].value === selectedValue) {
                                dropdown.remove(i);
                                break;
                            }
                        }
                        var firstValue = $("#tariffname").val();
                        fillCategoryDropdown(firstValue, $("#tariffnamecategory"));
                    }
                });                

            } else {
                alert("İptal Edildi!");
            }
        });

    });

    $("#tariffname").change(function () {
        var selectedValue = $(this).val();
        fillCategoryDropdown(selectedValue, $("#tariffnamecategory"));
    });

    $("#tariffnamecategory").change(function () {
        var selectedValue = $(this).val();
        //console.log(selectedValue);
        $.get("/Setting/GetCostListWidget", { id: selectedValue }, function (data) {
            $(".cost-list-widget").html('');
            $(".cost-list-widget").html(data);
        });
    });

    function fillCategoryDropdown(selectedValue, dropdownList) {
        dropdownList.empty();
        $.ajax({
            async: false,
            url: "/Setting/GetTariffNameCategories",
            type: "GET",
            data: { id: selectedValue },
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    var option = $("<option></option>").text(data[i].categoryName).val(data[i].id);
                    dropdownList.append(option);
                }
            }
        });
        var categoryId = $("#tariffnamecategory").val();
        $.get("/Setting/GetCostListWidget", { id: categoryId }, function (data) {
            $(".cost-list-widget").html('');
            $(".cost-list-widget").html(data);
        });
    }
</script>
